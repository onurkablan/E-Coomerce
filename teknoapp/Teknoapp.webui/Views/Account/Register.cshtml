       <input class="form-control" asp-for="FirstName"/>
       <label class="col-form-label">İsim:</label>
    </div>
    <div class="user-box">
       <input class="form-control" asp-for="LastName"/>
       <label class="col-form-label">Soyisim:</label>
    </div>
    <div class="user-box">
       <input class="form-control" asp-for="UserName"/>
       <label class="col-form-label">Kullanıcı Adı:</label>
    </div>
    <div class="user-box">
       <input class="form-control" asp-for="Email"/>
       <label class="col-form-label">Email:</label>
    </div>
    <div class="user-box">
       <input class="form-control" asp-for="Password"/>
       <label class="col-form-label">Şifre:</label>
    </div>
    <div class="user-box">
       <input class="form-control" asp-for="RePassword"/>
       <label class="col-form-label">Şifre Doğrulama:</label>
    </div>
