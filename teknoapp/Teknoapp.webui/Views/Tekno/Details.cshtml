@model ProductDetailModel
@section Categories
{
    @await Component.InvokeAsync("Categories")
}
<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.Product.ImageUrl" class="card-img img-fluid">
            </div>
            <div class="col-md-9">
                <h5 class="mb-3">@Model.Product.Marka</h5>
                <h5 class="mb-3">@Model.Product.Name</h5> 
                <hr /> 
                    @foreach(var item in Model.Categories)
                {
                <a asp-controller="tekno" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>    
                }
                <div class="mb-3">
                    <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"> @Model.Product.Price</i>  
                    </h4>

                     <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId">
                    <div class="input-group mb-3" >
                    <input type="number" style="width:100px;" name="quantity" class="form-control" value="1" min="1" step="1">
                    <div class="input-group-append">
                        <button type="submit"  class="btn btn-primary">
                        <i class="fas fa-cart-plus"></i>Sepete Ekle
                         </button>
                        </div>
                    </div>
                     </form>

                   
            </div>   
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 p-5">
            <p class="p-3">@Model.Product.Description</p>

            </div>
        </div>
    </div>
</div>