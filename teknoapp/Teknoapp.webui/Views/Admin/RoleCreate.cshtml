@using Teknoapp.webui.Models
@model RoleModel
<h1 class="h3">Role Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-8">
<form asp-controller="admin" asp-action="RoleCreate" method="post">
   <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"  asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Rol Ekle</button>
        </div>
    </div>
    
</form>
</div>
</div>
