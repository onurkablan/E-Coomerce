@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h1>Rol Listesi</h1> <a class=" d-flex btn btn-primary btn-sm justify-content-end  " href="/admin/role/create">Rol Ekleme</a><hr /> 
<div class="row">
    <div class="col-md-12">
        
        <table class="table table-bordered mt-3 ">
            <thead>
                <tr>
                    <td style="width:200px;">Id</td>
                    <td>Role Name</td>
                    <td style="width:160px;"></td>

                </tr>
            </thead>
            <tbody>
                @if (Model.Count()> 0)
                {
                    @foreach(var item in Model)
                {
                    <tr>
                     <td>@item.Id</td>
                     <td>@item.Name</td>
                     <td>
                        <a href="/admin/role/@item.Id" class="btn btn-success btn-sm mr-2">Düzenle</a>
                        <form action="/admin/role/delete" method="post" style="display:inline;">
                        <input type="hidden" name="RoleId" value="@item.Id">  
                         <button type="submit" class="btn btn-danger btn-sm">Sil</button>    
                    
                    </form>
                       
                        
                    </td>
                    </tr>
                    }

                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Rol Yok</h3>
                    </div>
                }

                
            </tbody>
        </table>
    </div>
</div>