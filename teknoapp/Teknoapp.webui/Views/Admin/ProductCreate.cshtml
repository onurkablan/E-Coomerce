@model ProductModel
<form asp-controller="admin" asp-action="ProductCreate" method="post">
<h1 class="h3">Ürün Ekleme</h1>
<hr />
<div class="row">
    <div class="col-md-8">
    <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"  asp-for="Name">Ürün Adı</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
     <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label" asp-for="Url"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Url"/>
            <span asp-validation-for="Url" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label" asp-for="Marka"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Marka"/>
            <span asp-validation-for="Marka" class="text-danger"></span>

        </div>
    </div>
   
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label" asp-for="Description">Özellikler</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label" asp-for="ImageUrl">Ürün Resmi</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label" asp-for="Price">Fiyat</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-2 p-3">
           
     <div class="custom-control custom-checkbox">
            <input asp-for="IsApproved" type="checkbox" class="custom-control-input" checked/>
            <label asp-for="IsApproved" class="custom-control-label">Onaylı Ürün</label>
        </div>
        <div class="custom-control custom-checkbox">
            <input asp-for="IsHome" type="checkbox" class="custom-control-input" />
            <label asp-for="IsHome" class="custom-control-label">Anasayfa Ürünü</label>
        </div>
        </div>
        </div>
    <div class="form-group row mb-2">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
    
</form>
@section Scripts{
   
    
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>    
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}