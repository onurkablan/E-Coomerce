@using Teknoapp.webui.Models
@model UserDetailsModel
<h1 class="h3">Kullanıcı Düzenleme</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="admin" asp-action="UserEdit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
    <div class="col-md-8">
     <input type="hidden" name="UserId" value="@Model.UserId"/>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"  asp-for="FirstName">İsim</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="FirstName"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"  asp-for="LastName">Soyisim</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="LastName"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"  asp-for="UserName">Kullanıcı Adı</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName"/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label class="col-sm-2 col-form-label"  asp-for="Email">Email</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
        </div>
    </div>

</div>

                    <div class="col-md-4">
                        @foreach (var rolename in ViewBag.Roles)
                        {
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" name="selectedRoles"type="checkbox" 
              value="@rolename" id="@rolename" @(Model.SelectedRoles.Any(i=> i == rolename)?"checked":"")>
                                <label class="custom-control-label" for="@rolename">
                                    @rolename
                                </label>
                            </div>
                        }
                        <hr />

                    </div>

                    </div>
                
        </form>
    </div>
    
</div>