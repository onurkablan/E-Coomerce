@model RoleDetails
<h1 class="h3">Role Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-12">


        <form asp-controller="Admin" asp-action="RoleEdit" >
            <input type="hidden" name="RoleId" value="@Model.Role.Id"/>
            <input type="hidden" name="RoleName" value="@Model.Role.Name"/>
            <h6 class="bg-info text-white p-1">@Model.Role.Name Listesine Ekle</h6>
            <table class="table tabletable-bordered table-sm">
                @if(Model.NonMembers.Count()==0){
                    <tr>
                        <td colspan="2">Role ait bütün kullanıcılar </td>
                    </tr>
                }
                else{
                @foreach(var user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td style="width:100px;">
                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                        </td>
                    </tr>
                }
                }
            </table>
            <hr />
             <h6 class="bg-info text-white p-1">@Model.Role.Name Listesinden Sil</h6>
            <table class="table tabletable-bordered table-sm">
                @if(Model.Members.Count()==0){
                    <tr>
                        <td>Role ait kullanıcı yok.</td>
                    </tr>
                }
                else{
                @foreach(var user in Model.Members)
                {
                    <tr>
                        <td colspan="3">@user.UserName</td>
                        <td  style="width:100px;">
                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                        </td>
                    </tr>
                }
                }
            </table>
            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
        </form>


    </div>
    
</div>