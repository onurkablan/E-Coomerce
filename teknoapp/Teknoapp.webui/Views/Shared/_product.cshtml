@model ProductEntity
<div class="card bg-light mb-2">
            <img class="card-img-top img-fluid" style="height:250px;" src="~/img/@Model.ImageUrl" alt="Card image cap">
      <div class="card-body" style="height:180px;">
            <h5 class="card-title"> @Model.Marka</h5>
            <span class="card-title"> @Model.Name</span><br />
            <small class="text-muted">
                <i class="fas fa-lira-sign">@Model.Price</i>
            </small>
          <div class="card-footer text-center">
            <a asp-controller="tekno" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">İncele</a>
           
            @if(User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                    <input type="hidden" name="productId" value="@Model.ProductId">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="btn btn-primary btn-sm">Sepete Ekle</button>
                </form>
            }
          </div>
      </div>
 </div>